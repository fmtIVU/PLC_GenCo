@model PLC_GenCo.ViewModels.Setups.DIPulseSetupViewModel
@{
    ViewBag.Title = "SetupDIPulse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Setup pulse counter </h2>
<h3>@Model.Component.Name</h3>
<h4>@Model.Component.Comment</h4>
<h4>Location: @Model.Component.Location</h4>

@using (Html.BeginForm("SaveDIPulse", "Factory"))
{

    <div class="form-group">
        @Html.LabelFor(m => m.DIPulseSetup.PulsesPerUnit)
        @Html.TextBoxFor(m => m.DIPulseSetup.PulsesPerUnit, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DIPulseSetup.PulsesPerUnit)
    </div>
    <div>
        Example: 100 pulses per 1kW => write 100
    </div>


    @Html.HiddenFor(m => m.Component)
    @Html.HiddenFor(m => m.DIPulseSetup.Id)
    @Html.HiddenFor(m => m.DIPulseSetup.IdComponent)
    @Html.HiddenFor(m => m.DIPulseSetup.IdIO)


    <button type="submit" class="btn btn-primary">Save</button>

}
<p align="right">
    <span style="display:inline-block; width: 20%;"></span>
    <input type="button" value="Cancel" class="btn btn-light" onclick="@("window.location.href='" + @Url.Action("Index", "Factory") + "'");" />
</p>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
